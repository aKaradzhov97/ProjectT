{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@layout/*": ["src/app/modules/layout/*"],
      "@material/*": ["src/app/modules/material/*"],
      "@shared/*": ["src/app/shared/*"],
      "@services/*": ["src/app/core/services/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
